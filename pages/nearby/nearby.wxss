/* pages/nearby/nearby.wxss */
.picker{
    border-bottom: 1rpx solid #008B00;
    padding-bottom: 5px;
}
picker{
  padding: 9px 5px;
  background: #ABABAB;
  color: white;
  text-align: center;
  font-size: 14px;
}

.header{
  background-color: #FFFFFF;
}
.header-describe{
  width: 700rpx;
  height: 60rpx;
  border-bottom: 1rpx #f6f6f6 solid;
  margin: 0 auto;
}
.header-describe text{
  line-height: 60rpx;
  font-size: 13px;
  color: #bcbcbc;
}
.header-class-a{
  width: 150rpx;
  height: 60rpx;
  border: 1rpx #bcbcbc solid;
  border-radius: 10rpx;
  text-align: center;
  margin: 10rpx 30rpx;
}
.header-class-b{
  width: 120rpx;
  height: 60rpx;
  border: 1rpx #bcbcbc solid;
  border-radius: 10rpx;
  text-align: center;
  margin: 10rpx 30rpx;
}
.header-class text{
  font-size: 20rpx;
  line-height: 60rpx;
  color: #8a8a8a;
}
.header-class{
  display: flex;
  width:750rpx;
  height: 80rpx;
}
.header-text{
  width: 700rpx;
  margin: 0 auto;
}
.header-text textarea{
  width: 700rpx;
  height: 200rpx;
  background-color: #fdfdfd;
  font-size: 13px;
  color: #666;
  border-radius: 10rpx;
}
.header-button{
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
}
button{
  font-size: 16px;
  background-color: #FFEC8B;
  color:#FFFFFF;
}

